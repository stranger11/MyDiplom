<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#151D2A"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.HelloFragment">

    <TextView
        android:id="@+id/text_hello"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/kanit"
        android:gravity="center"
        android:text="Please provide some information to customize the experience for youâ€¦!"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/edittext_height"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:gravity="center"
        android:background="@drawable/rectangle_edittext"
        android:ems="10"
        android:inputType="number"
        android:textSize="20sp"
        android:fontFamily="@font/kanit"
        android:textColorHint="@color/black"
        android:hint="Height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_hello" />

    <EditText
        android:id="@+id/edittext_weight"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/rectangle_edittext"
        android:inputType="number"
        android:ems="10"
        android:textSize="20sp"
        android:textColorHint="@color/black"
        android:hint="Weight"
        android:gravity="center"
        android:fontFamily="@font/kanit"
        app:layout_constraintEnd_toEndOf="@+id/edittext_height"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edittext_height"
        app:layout_constraintTop_toBottomOf="@+id/edittext_height" />

    <Button
        android:id="@+id/button_continue"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/itog_for_button"
        android:fontFamily="@font/kanit"
        android:text="Continue"
        android:textColor="@color/black"
        app:backgroundTint="#50F090"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/kanit"
        android:text="Remember"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="@+id/edittext_weight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edittext_weight"
        app:layout_constraintTop_toBottomOf="@+id/edittext_weight" />
</androidx.constraintlayout.widget.ConstraintLayout>