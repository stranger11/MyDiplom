<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="?mainBackground"
    tools:context=".ui.fragments.SettingsFragment">


    <EditText
        android:id="@+id/settingsEditName"
        style="?helloEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:hint="Name"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/settingsEditHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?helloEditText"
        android:layout_marginTop="44dp"
        android:hint="Height"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/settingsEditName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/settingsEditName"
        app:layout_constraintTop_toBottomOf="@+id/settingsEditName" />

    <EditText
        android:id="@+id/settingsEditWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?helloEditText"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Weight"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/settingsEditHeight"
        app:layout_constraintStart_toStartOf="@+id/settingsEditHeight"
        app:layout_constraintTop_toBottomOf="@+id/settingsEditHeight" />

    <Button
        android:id="@+id/button2"
        style="?button_background"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="apply changes"
        app:layout_constraintEnd_toEndOf="@+id/settingsEditWeight"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/settingsEditWeight"
        app:layout_constraintTop_toBottomOf="@+id/settingsEditWeight" />
</androidx.constraintlayout.widget.ConstraintLayout>