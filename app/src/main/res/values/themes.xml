<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MyThemeNight" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="mainBackground">@style/night_background</item>
        <item name="dateAndIndicator">@style/night_date_and_ind_text_color</item>
        <item name="mainTextColor">@style/night_text_color</item>
        <item name="button_background">@style/night_button_background</item>
        <item name="iconStatisticColor">@style/night_icon_statistic_color</item>
        <item name="iconSettingsColor">@style/night_icon_settings_color</item>
        <item name="iconPressColor">@style/night_icon_press_color</item>
        <item name="iconWaterColor">@style/night_icon_water_color</item>
        <item name="iconPushUpColor">@style/night_icon_push_color</item>
        <item name="iconSquatColor">@style/night_icon_squat_color</item>
        <item name="iconRunColor">@style/night_icon_run_color</item>
        <item name="iconManColor">@style/night_icon_man_color</item>
        <item name="editMyTextColor">@style/night_edit_text_color</item>
        <item name="customRowBackground">@style/night_custom_row_background</item>
        <item name="customRowDateColor">@style/night_custom_row_date_color</item>
        <item name="customRowTextColor">@style/night_custom_row_text_color</item>
        <item name="customRowViewHorizontalColor">@style/night_custom_row_view_horizontal_color</item>
        <item name="customRowViewVerticalColor">@style/night_custom_row_view_vertical_color</item>
        <item name="helloText">@style/night_hello_text_color</item>
        <item name="helloEditText">@style/night_hello_edit_text</item>
        <item name="kcal">@style/night_kcal_text</item>

        <item name="colorPrimary">#212D42</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>


    <style name="Theme.MyDiplom.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MyDiplom.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MyDiplom.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>





